{
  "title": "Prelodr",
  "name": "prelodr",
  "version": "2.1.0",
  "description": "A simple Material preloader inspired by Google Inbox",
  "keywords": [
    "preloader",
    "minimal",
    "responsive",
    "ui",
    "material-design"
  ],
  "license": "MIT",
  "repository": "joseluisq/prelodr",
  "author": {
    "name": "JosÃ© Luis Quintana",
    "url": "http://git.io/joseluisq"
  },
  "main": "./prelodr.js",
  "dependencies": {
    "emitus": "^1.1.3",
    "seqr": "^1.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-1": "^6.16.0",
    "clean-css": "^4.0.1",
    "coveralls": "^2.11.15",
    "eslint": "^3.11.1",
    "gzip-size": "^3.0.0",
    "in-publish": "^2.0.0",
    "jest-cli": "^19.0.1",
    "jsdom": "^10.0.0",
    "node-sass": "^4.4.0",
    "pretty-bytes": "^4.0.2",
    "readline-sync": "^1.4.5",
    "webpack": "^2.3.0",
    "webpack-dev-server": "^2.2.1"
  },
  "engines": {
    "node": ">= 4.0"
  },
  "scripts": {
    "start": "webpack-dev-server -d --content-base ./ --hot --inline src/app.js",
    "build:css": "node-sass scss/prelodr.scss dist/prelodr.css && cleancss dist/prelodr.css -do dist/prelodr.min.css",
    "build:lib": "babel ./src -d . --ignore 'test.js'. --ignore 'app.js'",
    "build:umd": "webpack src/prelodr.js dist/prelodr.js",
    "build:min": "webpack -p src/prelodr.js dist/prelodr.min.js",
    "build": "node ./scripts/build.js",
    "prepublish": "node ./scripts/build.js",
    "release": "node ./scripts/release.js",
    "lint": "eslint src",
    "test": "npm run lint && jest --coverage",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-1"
    ],
    "plugins": [
      "dev-expression",
      "transform-object-assign"
    ]
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/(node_modules|src|scripts|dist)/"
    ]
  }
}
